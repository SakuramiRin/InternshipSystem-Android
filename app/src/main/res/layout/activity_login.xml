<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/logo_head_image"-->
        <!--android:layout_width="95dp"-->
        <!--android:layout_height="95dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:background="顶部图片"-->
        <!--/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_corner_border"
                android:elevation="7dp"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:id="@+id/login_linear_phone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/night_biz_pc_account_username_icon" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/login_layout_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:background="@null"
                            android:hint="手机号"
                            android:inputType="textAutoComplete"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="15dp"
                            android:maxLines="1"
                            android:textColorHint="#b3b3b0"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/middle_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/login_linear_phone"
                    android:layout_marginLeft="30dp"
                    android:background="#cacaca"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_linear_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/middle_line"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/night_biz_pc_account_pwd_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/login_layout_password">

                        <EditText
                            android:id="@+id/login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:hint="密码"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="15dp"
                            android:maxLines="1"
                            android:textColorHint="#b3b3b0"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


            </RelativeLayout>

            <!--<Button-->
                <!--android:id="@+id/login_btn_login"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:background="@drawable/button_border_radius"-->
                <!--android:elevation="5dp"-->
                <!--android:text="登   录"-->
                <!--android:textColor="#FFFFFF" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/button_border_radius">
                <TextView
                    android:id="@+id/teacher_login"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="教师登录"
                    android:textSize="15sp"
                    android:textColor="#ffffff"/>
                <View
                    android:layout_width="1dp"
                    android:background="#ffffff"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/student_login"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="学生登录"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<TextView-->
                    <!--android:id="@+id/to_register_teacher"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:text="教师注册" />-->

                <TextView
                    android:id="@+id/to_register_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="还没账号？赶紧注册 " />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
